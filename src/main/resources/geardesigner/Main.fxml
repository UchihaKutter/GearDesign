<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<VBox xmlns:fx="http://javafx.com/fxml/1" stylesheets="@bootstrap2.css" xmlns="http://javafx.com/javafx/16"
      fx:controller="geardesigner.Controller">
    <children>
        <ToolBar prefHeight="30.0">
            <items>
                <Button fx:id="btSelectRecord" mnemonicParsing="false" text="历史记录"/>
            </items>
        </ToolBar>
        <HBox alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
              minWidth="-Infinity" spacing="20.0">
            <children>
                <VBox alignment="TOP_CENTER" spacing="20.0">
                    <children>
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                            <children>
                                <RadioButton fx:id="rbToDegree" selected="true" text="角度制">
                                    <toggleGroup>
                                        <ToggleGroup fx:id="groupAngles"/>
                                    </toggleGroup>
                                </RadioButton>
                                <RadioButton fx:id="rbToRadius" text="弧度制" toggleGroup="$groupAngles"/>
                                <Text strokeType="OUTSIDE" strokeWidth="0.0" text="保留小数位数">
                                    <HBox.margin>
                                        <Insets left="30.0"/>
                                    </HBox.margin>
                                </Text>
                                <ChoiceBox fx:id="cbPreservedDigit"/>
                            </children>
                            <VBox.margin>
                                <Insets/>
                            </VBox.margin>
                        </HBox>
                        <AnchorPane fx:id="APaneInputParams"/>
                        <ButtonBar buttonMinWidth="80.0">
                            <buttons>
                                <Button fx:id="btAnyCircle" layoutX="163.0" layoutY="10.0" text="任一圆"/>
                                <Button fx:id="btCalculate" defaultButton="true" text="计算"/>
                            </buttons>
                            <padding>
                                <Insets left="30.0" right="30.0"/>
                            </padding>
                        </ButtonBar>
                    </children>
                </VBox>
                <VBox alignment="TOP_CENTER" spacing="20.0">
                    <children>
                        <AnchorPane fx:id="APaneBaseTanAndSpan"/>
                        <AnchorPane fx:id="APaneDeviation" layoutX="10.0" layoutY="50.0"/>
                    </children>
                    <HBox.margin>
                        <Insets/>
                    </HBox.margin>
                </VBox>
            </children>
            <VBox.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </VBox.margin>
        </HBox>
    </children>
</VBox>
